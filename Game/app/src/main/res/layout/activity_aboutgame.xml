<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".level">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dp4"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/cambriab"
        android:gravity="center"
        android:text="In this game if you click on helicopter  it will start flying and shooting.The more you kill the more you score. Don't let any of those alien evil get pass you.\n They will destroy your planet.\n So Be our savior, Be the \nHero "
        android:textColor="@color/white"
        android:textSize="17sp"

        android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="BACK"
        android:textStyle="bold"
        />

</RelativeLayout>